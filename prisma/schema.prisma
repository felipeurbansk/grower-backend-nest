// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model grows {
  id      Int        @id @default(autoincrement())
  name    String
  height  Int
  width   Int
  depth   Int
  status  String?
  user_id Int
  farming farmings[]
  user    users      @relation(fields: [user_id], references: [id])
}

model seeds {
  id               Int      @id @default(autoincrement())
  name             String
  bank_name        String?
  vegetative_weeks Int?
  flowering_weeks  Int?
  per_square_meter Int?
  status           String?
  user_id          Int
  plants           plants[]
  user             users    @relation(fields: [user_id], references: [id])
}

model lights {
  id      Int        @id @default(autoincrement())
  name    String
  watts   Int?
  lumens  Int?
  status  String?
  user_id Int
  farming farmings[]
  user    users      @relation(fields: [user_id], references: [id])
}

model temperatures {
  id         Int      @id @default(autoincrement())
  value      Int
  farming_id Int
  farming    farmings @relation(fields: [farming_id], references: [id])
}

model humidities {
  id         Int      @id @default(autoincrement())
  value      Int
  farming_id Int
  farming    farmings @relation(fields: [farming_id], references: [id])
}

model base_components {
  id       Int        @id @default(autoincrement())
  ip       String
  mac      String
  user_id  Int
  farmings farmings[]
  user     users      @relation(fields: [user_id], references: [id])
}

model plants {
  id               Int       @id @default(autoincrement())
  qrcode           String?
  init_germination DateTime?
  init_vegetative  DateTime?
  init_flowering   DateTime?
  init_drying      DateTime?
  init_cure        DateTime?
  farming_id       Int
  seed_id          Int
  farming          farmings  @relation(fields: [farming_id], references: [id])
  seed             seeds     @relation(fields: [seed_id], references: [id])
}

model farmings {
  id                Int             @id @default(autoincrement())
  light_id          Int
  grow_id           Int
  base_component_id Int
  user_id           Int
  plants            plants[]
  temperatures      temperatures[]
  humidities        humidities[]
  light             lights          @relation(fields: [light_id], references: [id])
  grow              grows           @relation(fields: [grow_id], references: [id])
  base_component    base_components? @relation(fields: [base_component_id], references: [id])
  user              users           @relation(fields: [user_id], references: [id])
}

model users {
  id              Int               @id @default(autoincrement())
  full_name       String
  username        String            @unique
  email           String            @unique
  password        String
  status          String?
  farmings        farmings[]
  grows           grows[]
  base_components base_components[]
  lights          lights[]
  seeds           seeds[]
}
