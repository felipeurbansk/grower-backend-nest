// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Grows {
  id Int @default(autoincrement()) @id
  name String
  height Int
  width Int
  depth Int
  status String?
  farming Farming[]
}

model Seeds {
  id Int @default(autoincrement()) @id
  name String
  bank_name String?
  vegetative_weeks Int?
  flowering_weeks Int?
  per_square_meter Int?
  status String?
}

model Lights {
  id Int @default(autoincrement()) @id
  name String
  watts Int?
  lumens Int?
  status String?
}
model Temperatures {
  id Int @default(autoincrement()) @id
  base_component_id Int
  value Int
  base_component BaseComponents @relation(fields: [base_component_id], references: [id])
}

model Humidities {
  id Int @default(autoincrement()) @id
  base_component_id Int
  value Int
  base_component BaseComponents @relation(fields: [base_component_id], references: [id])
}

model BaseComponents {
  id Int @default(autoincrement()) @id
  ip String
  mac String
  temperatures Temperatures[]
  humidities Humidities[]
}

model Plants {
  id Int @default(autoincrement()) @id
  seed_id String
  qrcode String?
  init_germination DateTime?
  init_vegetative DateTime?
  init_flowering DateTime?
  init_drying DateTime?
  init_cure DateTime?
  farming_id Int
  farming Farming @relation(fields: [farming_id], references: [id])
}

model Farming {
  id Int @default(autoincrement()) @id
  plants Plants[]
  grow Grows @relation(fields: [grow_id], references: [id])
  grow_id Int
}

